BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_value
            text: "0"
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(int(input_value.text), 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(int(input_value.text), -1)
    Button:
        text: "Convert Miles to Kilometres"
        on_press: app.convert_miles(int(input_value.text))
    Label:
        id: output_value
        text: ""
        color: (100, 100, 255, 1)